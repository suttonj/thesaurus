{
  "name": "Instant Thesaurus",
  "description": "Find synonyms at the click of a button",
  "version": "0.1",
  "icons": {
	"16": "icon16.png",
	"48": "icon48.png"
  },
  "permissions": [
	"contextMenus",
	"clipboardRead",
	"clipboardWrite",
	"http://words.bighugelabs.com/api/2/*"
  ],
  "background": {
    "scripts": ["thesaurus.js"]
  },
  "page_action": {
    "default_icon": "icon.png"  
  },
  "content_scripts": [
	{
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	}
  ],
  "manifest_version": 2
}
